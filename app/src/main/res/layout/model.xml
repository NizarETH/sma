<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@color/colorAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Intervenants"
    >
    <RelativeLayout android:layout_height="91dp"
        android:layout_width="match_parent">
        <ImageView
            android:layout_height="100dp"
            android:id="@+id/spacecraftImage"
            android:padding="10dp"
            android:src="@drawable/anas"
            android:layout_width="120dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/profTxt"
            android:textSize="14dp"
            android:textStyle="normal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/spacecraftImage"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/comTxt"
            android:textSize="14dp"
            android:textStyle="normal"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/spacecraftImage"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SalleAmbassadeurs"
            android:id="@+id/lieuTxt"
            android:textSize="14dp"
            android:textStyle="normal"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignBottom="@+id/spacecraftImage"
            android:layout_alignRight="@+id/nameTxt"
            android:layout_alignEnd="@+id/nameTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Samedi : 28 Octobre"
            android:id="@+id/datetimeTxt"
            android:textSize="14dp"
            android:textStyle="normal"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_above="@+id/comTxt"
            android:layout_toRightOf="@+id/spacecraftImage"
            android:layout_toEndOf="@+id/spacecraftImage"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pr BENNANI ANAS"
            android:id="@+id/nameTxt"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/spacecraftImage"
            android:layout_toEndOf="@+id/spacecraftImage"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView >
